{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "useDefineForClassFields": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Type Checking
    "strict": true,

    // Output and Interoperability
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["sbily/src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
